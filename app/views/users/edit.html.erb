<%= form_for @user do |f| %>
<ul style="list-style: none;">
  <li><%=f.label :username,"Your username here" %></li>
  <li><%=f.text_field :username%></li>
  <li><%=f.label :password,"Your password here" %></li>
  <li><%=f.password_field :password %></li>
  <li><%=f.label :email,"Your email here" %></li>
  <li><%=f.text_field :email %></li>
  <li><%=f.submit "Submit"%></li>
</ul>
<% end %>

<% if @user.errors.any?  %>
 <ul style="color:red">
   <% @user.errors.messages.each do |e|%>
   <li> <%= "#{e[0]} #{e[1][0]}" %></li>
    <% end %>
 </ul>
 <% end %>
